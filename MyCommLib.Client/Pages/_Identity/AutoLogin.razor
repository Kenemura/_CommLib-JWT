@page "/identity/autologin"
@page "/identity/autologin/{result}"
@inject xAuthService auth
@inject HttpClient Http

<br/>
@if (!String.IsNullOrEmpty(Result))
{
    <div class="alert alert-info mt-5">You are logged in!</div>
    <a class="btn btn-outline-primary" href="@State.GetUri("")">Go to Home Page</a>
    <hr />
    <div class="text-info">
        You can <a class="btn btn-outline-primary" href="Identity/ChangePassword?returnPage=identity/autologin">change your password here</a>
        so that you can login manually with your password next time.
    </div>
    <hr />
}
else
{
    <div class="alert alert-info mt-5">Auto Login (Just click Log In button to go ahead)</div>

    <EditForm class="form-signin" OnValidSubmit="OnSubmit" Model="Req">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <ul>
            @foreach (string msg in ErrorMessages)
            {
                <li style="color: red">@msg</li>
            }
        </ul>

        <div class="form-group">
            <label class="MyFormLabel">Username:</label>
            <InputText class="form-control" @bind-Value="Req.Username" disabled />
        </div>

        <div class="form-group">
            <label class="MyFormLabel">Email:</label>
            <InputText class="form-control" @bind-Value="Req.Email" disabled />
        </div>
        <div class="alert alert-danger my-3">
            <div class="form-check">
                <label class="form-check-label">
                    <InputCheckbox class="form-check-input" @bind-Value="@Req.RememberMe" />
                    Remember Me:
                </label>
            </div>
            <div>
                Do not tick <b>Remember Me</b> if you are on a public device.
                <br />And, make sure to Logout when you finish.
            </div>
        </div>
        <div class="my-2">
            <button class="btn btn-primary btn-sm" type="submit">Log In</button>
            <a class="btn btn-sm btn-warning" href="@ReturnTo">Cancel</a>
        </div>

    </EditForm>
}

@code {
    [Parameter] public string Result { get; set; } = "";
    [Parameter] public string ReturnTo { get; set; } = "Index";
    AutoLoginModel Req { get; set; } = new AutoLoginModel();
    List<string> ErrorMessages { get; set; } = new List<string>();

    protected override async Task OnInitializedAsync()
    {
        await Task.CompletedTask;
        var qs = new clsQueryString(NM);
        Req.Username = qs.GetValue("Username");
        Req.Email = qs.GetValue("Email");
        Req.UserId = qs.GetValue("UserId");
    }

    async Task OnSubmit()
    {
        ErrorMessages = new List<string>();
        try
        {
            var rmPassword = await auth.AutoLogin(Req);
            if (Req.RememberMe)
            {
                var rm = new clsRememberMeW(Http, JS);
                await rm.Set(Req.Username, rmPassword);
            }
            NM.NavigateTo($"Identity/AutoLogin/loggedin");
        }
        catch (Exception ex) // return BadRequest when not authenticated
        {
            ErrorMessages.Add($"Something went wrong (Authentication error)!");
            Console.WriteLine(ex.Message);
        }
    }
}
