@page "/identity/ChangePassword"
@inject IdentityApi api

<br/>
<div class="alert alert-info mt-5">Change Password</div>

@if (!String.IsNullOrEmpty(Message))
{
    <div class="alert alert-warning mt-5">@Message</div>
    <a class="btn btn-outline-primary" href="@State.GetUri("")">Go to Home Page</a>
}
else
{
    <EditForm class="form-signin" OnValidSubmit="OnSubmit" Model="Req">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <ul>
            @foreach (string msg in ErrorMessages)
            {
                <li style="color: red">@msg</li>
            }
        </ul>

        <div class="form-group">
            <label class="MyFormLabel">Password:</label>
            <InputText type="password" class="form-control" @bind-Value="Req.Password" placeholder="Password" />
        </div>

        <div class="form-group">
            <label class="MyFormLabel">(Re-enter)</label>
            <InputText type="password" class="form-control" @bind-Value="Req.Password2" placeholder="(Re-enter)" />
        </div>
        <div class="my-2">
            <button class="btn btn-primary btn-sm" type="submit">Change Password</button>
            <a class="btn btn-sm btn-warning" href="">Cancel</a>
        </div>

    </EditForm>
}

@code {
    ChangePasswordModel Req { get; set; } = new ChangePasswordModel();
    List<string> ErrorMessages { get; set; } = new List<string>();
    string Message = "";

    protected override async Task OnInitializedAsync()
    {
        await Task.CompletedTask;
    }

    async Task OnSubmit()
    {
        ErrorMessages = new List<string>();
        try
        {
            await api.ChangePassword(Req);
            Message = "Password Changed!";
        }
        catch (Exception ex)
        {
            ErrorMessages.Add($"Something went wrong ({ex.Message})!");
            Console.WriteLine(ex.Message);
        }
    }
}
